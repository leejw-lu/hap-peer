                <label for="4">4</label>
                <input type="radio" id="5" name="proj_level" value="5">
                <label for="5">5</label>
            </td>
        </tr>
        <tr>
            <td><input type="submit" value="프로젝트 등록"></td>
        </tr>
    </table>
