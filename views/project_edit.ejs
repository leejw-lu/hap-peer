<body>
  <%- include('./partials/login_nav.ejs'); %>

<h3>프로젝트 편집</h3>
<form action="/project_edit" method="post">
  <table>
      <tr>
          <td>프로젝트 이름</td>
          <td><input type="text" name="proj_title" value="<%=project_detail.proj_title%>"></td>
      </tr>
      <tr>
        <td>팀장</td>
        <td> <%= user_id %> </td>
      </tr>
      <tr>
          <td>프로젝트 소개</td>
          <td><input type="text" name="proj_content" value="<%=project_detail.proj_content%>"></td>
      </tr>
      <tr>
        <td>프로젝트 필요 스택</td>
        <td>
          <input type="checkbox" name="skillstack" value=" C " <% if (project_detail.proj_stack.includes(" C ")){ %> checked <%}%> > C 
          <input type="checkbox" name="skillstack" value=" C# " <% if (project_detail.proj_stack.includes(" C# ")){ %> checked <%}%> > C# 
          <input type="checkbox" name="skillstack" value=" C++ " <% if (project_detail.proj_stack.includes(" C++ ")){ %> checked <%}%> > C++ 
          <input type="checkbox" name="skillstack" value=" JAVA "<% if (project_detail.proj_stack.includes(" JAVA ")){ %>checked <%}%>> JAVA 
          <input type="checkbox" name="skillstack" value=" Python "<% if (project_detail.proj_stack.includes(" Python ")){ %>checked <%}%>> Python 
          <input type="checkbox" name="skillstack" value=" Visual Basic "<% if (project_detail.proj_stack.includes(" Visual Basic ")){ %>checked <%}%>> Visual Basic 
          <input type="checkbox" name="skillstack" value=" JS "<% if (project_detail.proj_stack.includes(" JS ")){ %>checked <%}%>> JS 
          <input type="checkbox" name="skillstack" value=" SQL "<% if (project_detail.proj_stack.includes(" SQL ")){ %>checked <%}%>> SQL 
          <input type="checkbox" name="skillstack" value=" PHP "<% if (project_detail.proj_stack.includes(" PHP ")){ %>checked <%}%>> PHP 
          <input type="checkbox" name="skillstack" value=" 기타 " />기타 
      </td>
    </tr>
    <tr>
        <td>프로젝트 난이도</td>
        <td>
            <input type="radio" id="1" name="proj_level" value="1">
            <label for="1">1</label>
            <input type="radio" id="2" name="proj_level" value="2">
            <label for="2">2</label>
            <input type="radio" id="3" name="proj_level" value="3">
            <label for="3">3</label>
            <input type="radio" id="4" name="proj_level" value="4">
            <label for="4">4</label>
            <input type="radio" id="5" name="proj_level" value="5">
            <label for="5">5</label>
        </td>
    </tr>
    <tr>
      <td>팀원 모집 마감</td>
      <td>
          <input type="radio" id="on" name="recruit_status" value="1">
          <label for="on">on</label>
          <input type="radio" id="off" name="recruit_status" value="0">
          <label for="off">off</label>
      </td>
  </tr>
    <tr>
      <td>프로젝트 마감</td>
      <td>
          <input type="radio" id="on" name="develop_status" value="1">
          <label for="on">on</label>
          <input type="radio" id="off" name="develop_status" value="0">
          <label for="off">off</label>
      </td>
  </tr>
      <tr>
          <td><input type="submit" value="저장"></td>
      </tr>
  </table>
</form>

</body>